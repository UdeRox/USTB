---
import BaseLayout from "../../layouts/BaseLayout.astro";
const post = await Astro.glob("./post-2.md");
---

<BaseLayout>
  {
    post.map(({ Content, frontmatter }) => (
      <>
        <div class="h-screen px-10 mx-auto ">
          <h1 class="text-2xl text-center font-bold mb-4">
            {frontmatter.title}
          </h1>
          <img
            src={frontmatter.image.url}
            alt={frontmatter.image.alt}
            class=" mx-auto mb-4 rounded-3xl shadow-md"
          />
          <Content  />

          <div class="my-10"></div>
        </div>
      </>
    ))
  }
</BaseLayout>
