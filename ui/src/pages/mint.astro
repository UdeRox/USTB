---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from 'astro:assets';
import USDT from "../assets/Images/USDT.webp";
import TBILL from "../assets/Images/TBILL.png";
const props = Astro.props;

const pageTitle = "";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex flex-col my-28 items-center">
    <div class="bg-white rounded-3xl p-4 shadow-md">
      <div class="flex justify-between items-center">
        <h1 class="text-4xl text-black font-bold mb-4">Mint</h1>
        <span
          class="text-sm text-blue-700 max-h-6 font-light bg-blue-200 rounded-lg p-0.5"
        >
          âš¡Quick 
          T+1 Days Settlement
        </span>
      </div>

      <div class="border rounded-2xl border-1 p-2 my-5">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-gray-500">Balance: 0.0000 USDT</span>
        </div>
        <div class="flex items-center mb-2">
          <input
            type="number"
            class="w-full rounded-l-md text-black text-2xl font-bold  leading-tight focus:outline-none focus:shadow-outline"
          placeholder="Min. 100.000.00"
          />
          <span class="bg-gray-200 px-3 py-2 rounded-md text-gray-700">Max</span
          >
          <select
            class="ml-2  rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          >
            <option >USDT</option>
          </select>
        </div>
      </div>


      <!-- <Image src={TBILL} alt="USDT" />  -->

      <div class="flex justify-between items-center mb-2">
        <span class="text-sm text-gray-500">Minimum Amount</span>
        <span class="text-sm text-black font-bold">100,000.00 USDT</span>
      </div>
      <div class="flex justify-between items-center mb-4">
        <span class="text-sm text-gray-500">Quick-settle Quota</span>
        <span class="text-sm text-black font-bold">848,246.09934</span>
      </div>

    <div class="text-sm text-gray-500">
      *A whitelisted address is mandatory
    </div>


      <div class="flex flex-1 item-center py-4 justify-center">
        <button
          class="bg-gradient-to-r rounded-2xl from-blue-500 to-blue-700 hover:from-blue-700 hover:to-blue-900 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50 text-white font-bold py-2 px-4 transition duration-300 ease-in-out transform hover:scale-105"
        >
          Mint Now
        </button>
      </div>
    </div>
  </div>
</BaseLayout>
